@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div id="container">
    <div id="results">
        <h1>Movies</h1>
        @foreach (Movie movie in Model.Movies) //Model.Movies.All
        {
            <div class="movie-entry">
                <h2>
                    @movie.Title
                    <smaller>
                        @(@movie.MPAA_Rating == null ? "" : $"({movie.MPAA_Rating})")
                    </smaller>
                </h2>
                <i>@movie.Major_Genre</i>
                <div class="ratings">
                    <div>
                        Rotten Tomatoes
                        <h3>@movie.Rotten_Tomatoes_Rating</h3>
                    </div>
                    <div>
                        IMDB
                        <h3>@movie.IMDB_Rating</h3>
                    </div>
                </div>
            </div>
        }
    </div>
    <form method="post">
        <h4>Search</h4>
        <input type="text" name="search" value="@Model.search" id="search" />
        <input type="submit" value="Search and Filter" />
        <h2>MPAA Rating</h2>
        <div class="checkbox-list">
            <label>
                <input type="checkbox" name="mpaa" value="G" checked="@Model.mpaa.Contains("G")"/>
                Rated G
            </label>
            <label>
                <input type="checkbox" name="mpaa" value="PG" checked="@Model.mpaa.Contains("PG")"/>
                Rated PG
            </label>
            <label>
                <input type="checkbox" name="mpaa" value="PG-13" checked="@Model.mpaa.Contains("PG-13")" />
                Rated PG-13
            </label>
            <label>
                <input type="checkbox" name="mpaa" value="R" checked="@Model.mpaa.Contains("R")" />
                Rated R
            </label>
            <label>
                <input type="checkbox" name="mpaa" value="NC-17" checked="@Model.mpaa.Contains("NC-17")"/>
                Rated NC-17
            </label>
            <h4>Review Scores</h4>
            <label>
                Minimum IMDB Rating:
                <input type="number" min="0" max="10" step="0.1" name="minIMDB" value="@Model.minIMDB"/>
            </label>
            <label>
                Maximum IMDB Rating:
                <input type="number" min="0" max="10" stap="0.1" name="maxIMDB" value="@Model.maxIMDB"/>
            </label>
        </div>
    </form>
</div>
